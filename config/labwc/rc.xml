<?xml version="1.0"?>

<labwc_config>

  <core>
    <decoration>server</decoration>
    <gap>10</gap>
  </core>

  <theme>
    <name>greybird-labwc</name>
    <cornerRadius>8</cornerRadius>
    <font name="sans" size="10" />
  </theme>

  <!-- edge strength is in pixels -->
  <resistance>
    <screenEdgeStrength>20</screenEdgeStrength>
  </resistance>

  <focus>
    <!-- FIXME: is there a way to add a bit of delay before switching? -->
    <followMouse>yes</followMouse>
    <followMouseRequiresMovement>yes</followMouseRequiresMovement>
    <raiseOnFocus>no</raiseOnFocus>
  </focus>

  <!-- Set range to 0 to disable window snapping completely -->
  <snapping>
    <range>0</range>
    <topMaximize>no</topMaximize>
  </snapping>

  <desktops>
    <popupTime>1000</popupTime>
    <names>
      <name>1</name>
      <name>2</name>
      <name>3</name>
      <name>4</name>
    </names>
  </desktops>

  <keyboard>

    <repeatRate>25</repeatRate>
    <repeatDelay>600</repeatDelay>

    <keybind key="A-Tab">
      <action name="NextWindow" />
    </keybind>
    <keybind key="W-Tab">
      <action name="NextWindow" />
    </keybind>

    <keybind key="A-F4">
      <action name="Close" />
    </keybind>

    <keybind key="W-S-c">
      <action name="Close" />
    </keybind>
    <keybind key="W-S-r">
      <action name="Reconfigure" />
    </keybind>
    <keybind key="W-S-f">
      <action name="ToggleFullscreen" />
    </keybind>
    <keybind key="W-m">
      <action name="ToggleMaximize" />
    </keybind>
    <keybind key="W-r">
      <action name="Raise" />
    </keybind>
    <keybind key="W-j">
      <action name="Lower" />
    </keybind>

    <keybind key="A-Space">
      <action name="ShowMenu" menu="client-menu" />
    </keybind>

    <keybind key="C-A-h">
      <action name="GoToDesktop" to="left" wrap="no" />
    </keybind>
    <keybind key="C-A-l">
      <action name="GoToDesktop" to="right" wrap="no" />
    </keybind>

    <keybind key="C-A-S-h">
      <action name="SendToDesktop" to="left" wrap="no" />
    </keybind>
    <keybind key="C-A-S-l">
      <action name="SendToDesktop" to="right" wrap="no" />
    </keybind>

    <keybind key="W-1">
      <action name="GoToDesktop" to="1" wrap="no" />
    </keybind>
    <keybind key="W-2">
      <action name="GoToDesktop" to="2" wrap="no" />
    </keybind>
    <keybind key="W-3">
      <action name="GoToDesktop" to="3" wrap="no" />
    </keybind>
    <keybind key="W-4">
      <action name="GoToDesktop" to="4" wrap="no" />
    </keybind>
    <keybind key="W-5">
      <action name="GoToDesktop" to="5" wrap="no" />
    </keybind>
    <keybind key="W-6">
      <action name="GoToDesktop" to="6" wrap="no" />
    </keybind>
    <keybind key="W-7">
      <action name="GoToDesktop" to="7" wrap="no" />
    </keybind>
    <keybind key="W-8">
      <action name="GoToDesktop" to="8" wrap="no" />
    </keybind>
    <keybind key="W-9">
      <action name="GoToDesktop" to="9" wrap="no" />
    </keybind>

    <keybind key="W-S-1">
      <action name="SendToDesktop" to="1" wrap="no" />
    </keybind>
    <keybind key="W-S-2">
      <action name="SendToDesktop" to="2" wrap="no" />
    </keybind>
    <keybind key="W-S-3">
      <action name="SendToDesktop" to="3" wrap="no" />
    </keybind>
    <keybind key="W-S-4">
      <action name="SendToDesktop" to="4" wrap="no" />
    </keybind>
    <keybind key="W-S-5">
      <action name="SendToDesktop" to="5" wrap="no" />
    </keybind>
    <keybind key="W-S-6">
      <action name="SendToDesktop" to="6" wrap="no" />
    </keybind>
    <keybind key="W-S-7">
      <action name="SendToDesktop" to="7" wrap="no" />
    </keybind>
    <keybind key="W-S-8">
      <action name="SendToDesktop" to="8" wrap="no" />
    </keybind>
    <keybind key="W-S-9">
      <action name="SendToDesktop" to="9" wrap="no" />
    </keybind>

    <keybind key="W-Return">
      <action name="Execute" command="alacritty" />
    </keybind>
    <keybind key="A-F2">
      <action name="Execute" command="wofi --show run" />
    </keybind>
    <keybind key="W-p">
      <action name="Execute" command="wofi --show run" />
    </keybind>
    <keybind key="A-F3">
      <action name="Execute" command="wofi --show drun" />
    </keybind>
    <keybind key="W-รถ">
      <action name="Execute" command="wofi --show drun" />
    </keybind>

    <keybind key="W-f">
      <action name="Execute" command="thunar" />
    </keybind>
    <keybind key="W-c">
      <action name="Execute" command="alacritty -e mc" />
    </keybind>
    <keybind key="W-b">
      <action name="Execute" command="firefox" />
    </keybind>
    <keybind key="W-S-b">
      <action name="Execute" command="firefox --private-window" />
    </keybind>
    <keybind key="W-i">
      <action name="Execute" command="thunderbird" />
    </keybind>
    <keybind key="W-e">
      <action name="Execute" command="emacsclient -nc" />
    </keybind>

    <keybind key="XF86_AudioPlay">
      <action name="Execute" command="mpc toggle" />
    </keybind>
    <keybind key="XF86_AudioStop">
      <action name="Execute" command="mpc stop" />
    </keybind>
    <keybind key="XF86_AudioPrev">
      <action name="Execute" command="mpc prev" />
    </keybind>
    <keybind key="XF86_AudioNext">
      <action name="Execute" command="mpc next" />
    </keybind>

    <keybind key="W-Down">
      <action name="Execute" command="mpc toggle" />
    </keybind>
    <keybind key="W-Up">
      <action name="Execute" command="mpc stop" />
    </keybind>
    <keybind key="W-Left">
      <action name="Execute" command="mpc prev" />
    </keybind>
    <keybind key="W-Right">
      <action name="Execute" command="mpc next" />
    </keybind>
    <keybind key="W-S-Up">
      <action name="Execute" command="mpc clear" />
    </keybind>
    <keybind key="W-S-Down">
      <action name="Execute" command="urlwatch" />
    </keybind>

    <keybind key="W-l">
      <action name="Execute" command="alacritty -e pulsemixer" />
    </keybind>

    <keybind key="XF86_AudioMute">
      <action name="Execute" command="pactl set-sink-mute @DEFAULT_SINK@ toggle" />
    </keybind>
    <keybind key="XF86_AudioLowerVolume">
      <action name="Execute" command="sh -c 'pactl set-sink-mute @DEFAULT_SINK@ false ; pactl set-sink-volume @DEFAULT_SINK@ -5%'" />
    </keybind>
    <keybind key="XF86_AudioRaiseVolume">
      <action name="Execute" command="sh -c 'pactl set-sink-mute @DEFAULT_SINK@ false ; pactl set-sink-volume @DEFAULT_SINK@ +5%'" />
    </keybind>

    <keybind key="W-x">
      <action name="Execute" command="pactl set-source-mute @DEFAULT_SOURCE@ toggle" />
    </keybind>
    <keybind key="W-Home">
      <action name="Execute" command="pactl set-sink-mute @DEFAULT_SINK@ toggle" />
    </keybind>
    <keybind key="W-Next">
      <action name="Execute" command="sh -c 'pactl set-sink-mute @DEFAULT_SINK@ false ; pactl set-sink-volume @DEFAULT_SINK@ -1%'" />
    </keybind>
    <keybind key="W-Prior">
      <action name="Execute" command="sh -c 'pactl set-sink-mute @DEFAULT_SINK@ false ; pactl set-sink-volume @DEFAULT_SINK@ +1%'" />
    </keybind>

    <keybind key="XF86_ScreenSaver">
      <action name="Execute" command="swaylock -f -c 000000" />
    </keybind>
    <keybind key="W-Escape">
      <action name="Execute" command="swaylock -f -c 000000" />
    </keybind>

    <keybind key="XF86_MonBrightnessUp">
      <action name="Execute" command="brightnessctl set +10%" />
    </keybind>
    <keybind key="XF86_MonBrightnessDown">
      <action name="Execute" command="brightnessctl set 10%-" />
    </keybind>

  </keyboard>

  <mouse>
    <default />
    <!-- Show a custom menu on desktop right click -->
    <context name="Root">
      <mousebind button="Right" action="Press">
        <action name="ShowMenu" menu="some-custom-menu" />
      </mousebind>
    </context>
  </mouse>

</labwc_config>

